generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  NORMAL_USER
  VIP_USER
}

enum UserStatus {
  Normal
  Disabled
}

model Admin {
  id       String @id @default(uuid())
  name     String
  phone    String @unique
  password String
}

model User {
  id          String     @id @default(uuid())
  name        String
  phone       String     @unique
  password    String
  role        UserRole   @default(NORMAL_USER)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  lastLoginAt DateTime?
  token       String?
  status      UserStatus @default(Normal)
}
